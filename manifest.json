{
  "manifest_version": 3,
  "name": "Spotify Image Generator",
  "version": "1.0.0",
  "description": "Generates an image based on the currently playing song on Spotify.",
  "icons": [
    {
      "src": "songWallpaper.png",
      "sizes": "16x16",
      "type": "image/png"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "https://api.openai.com/"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
